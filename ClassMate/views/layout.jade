doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    title= title
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/dashboard.css')
  body
    if !user
      div(class="container")
        block content
    else
      nav(class="navbar navbar-inverse navbar-fixed-top")
        div(class="container-fluid")
          div(class="navbar-header")
            a(class="navbar-brand" href="/") ClassMate DashBoard
          
          div(id="navbar" class="navbar-collapse collapse")
            ul(class="nav navbar-nav navbar-right")
              li 
                a Welcome #{user.name}
              li
                a(href="/auth/logout") Logout

      div(class="container-fluid")
        div(class="row")
          div(class="col-sm-3 col-md-2 sidebar")
            ul(class="nav nav-sidebar")
              if page == "overview"
                li(class="active")
                  a(href="/") Overview
              else
                li
                  a(href="/") Overview
              if page == "courses"
                li(class="active")
                  a Courses
                  div
                    a(class="list-group-item showMyCourses") Your Courses
                    a(class="list-group-item addCourse") Add Course
                    a(class="list-group-item showSubscribedCourses") Subscribed Courses
                    a(class="list-group-item subscribeCourse") Subscribe to Course
              else
                li
                  a(href="/courses") Courses
          div(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main")
            h1(class="page-header") #{ title }
            block content

  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
  script(src='/js/courses.js')
  script(src="/js/bootstrap.min.js")